{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": "packages",
    "lib": ["dom", "es6"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@ngx-loading-bar/*": ["./*"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "demo/**/*.ts"
  ],
  "compileOnSave": false
}
